@model Student
@{
    ViewData["Title"] = "Edit Student";
    Layout = "_Layout";
}

    <h1 class="alert alert-info text-center"> Editing Student</h1>
    <form method="post">
    <div class="col-md-5 form-floating mb-3">
        <input asp-for="Id" type="number" class="form-control" readonly>
        <label for="Id">ID</label>
        <span asp-validation-for="Id"></span>
    </div>
    <div class="col-md-5 form-floating mb-3">
        <input asp-for="Name" type="text" class="form-control">
        <label for="Name">Full name</label>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="col-md-5 form-floating mb-3">
        <input asp-for="Age" type="number" class="form-control">
        <label for="Age">Age</label>
        <span asp-validation-for="Age"></span>
    </div>
    <div class="col-md-5 form-floating mb-3">
        <input asp-for="Email" type="email" class="form-control">
        <label for="Email">Email</label>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="col-md-5 form-floating mb-3">
        <input asp-for="Password" type="password" class="form-control">
        <label for="Password">Password</label>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="col-md-5 form-floating mb-3">
        <input asp-for="CPassword" type="password" class="form-control">
        <label for="CPassword">Confirm Password</label>
        <span asp-validation-for="CPassword"></span>
    </div>
    <div class="col-md-5">
    <label asp-for="DeptNo"></label>
    <select asp-for="DeptNo" class="form-select" asp-items="ViewBag.Depts">
    </select>
    </div>
    <div>&nbsp;</div>
    <a asp-controller="students" asp-action="index" class="btn btn-primary">Back</a>
    &nbsp
    <input type="reset" class="btn btn-secondary" />
    &nbsp
    <input class="btn btn-danger col-md-2" type="submit" value="edit" />
</form>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        }
    
