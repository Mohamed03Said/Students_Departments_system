@model Department
@{
    ViewData["Title"] = "Department Details";
    Layout = "_Layout";
}

<h1 class="alert alert-danger">
    @Model.DeptId : @Model.DeptName : @Model.Students.Count() students
</h1>

<table class="table table-hover table-bordered">
	<h1> Students List</h1>
    <tdead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Operations</th>
		</tr>
	</tdead>
<tbody>
    @{
        foreach (var item in Model.Students)
        {
            <tr>
                <td>@(item.Id)</td>
                <td>@(item.Name)</td>
                    <td>
                        <a asp-controller="departments" asp-action="remove" asp-route-id="@item.Id" onclick="return confirm('Are you sure to remove this student from the department?')" class="btn btn-danger"> Remove</a>
                    </td>
                </tr>
        }
		}
		
	</tbody>
    </table>

<a asp-controller="departments" asp-action="index" class="btn btn-primary">Back</a>
		
	
	

